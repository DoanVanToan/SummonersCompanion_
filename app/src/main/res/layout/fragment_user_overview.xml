<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_0E1617"
    tools:context="com.toandoan.lol.fragment.UserOverviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/size_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAvt"
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_60"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_marginLeft="@dimen/size_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.toandoan.lol.widget.view.RobotoTextView
                    android:id="@+id/tvName"
                    android:padding="@dimen/size_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ToanD oan"
                    android:textAllCaps="true"
                    android:textColor="@color/yellow_D4BC6C"
                    android:textSize="@dimen/text_size_20"
                    app:typeface="roboto_bold"/>

                <com.toandoan.lol.widget.view.RobotoTextView
                    android:id="@+id/tvLevel"
                    android:layout_marginTop="@dimen/size_3"
                    android:padding="@dimen/size_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ToanDoan"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13"
                    app:typeface="roboto_light" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
