<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_0E1617"
              android:orientation="vertical"
              android:padding="@dimen/size_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.toandoan.lol.widget.view.SquareImageView
            android:id="@+id/ivItemImage"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_icon"
            android:padding="@dimen/size_1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/text_size_5"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.toandoan.lol.widget.view.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bot game"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15"
                app:typeface="roboto_bold"/>

            <com.toandoan.lol.widget.view.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:text="11/11/11"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15"
                app:typeface="roboto_bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/text_size_5"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.toandoan.lol.widget.view.SquareImageView
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/size_13"
                    android:layout_marginRight="@dimen/text_size_3"
                    android:layout_height="@dimen/size_13"
                    android:background="@drawable/gold"/>

                <com.toandoan.lol.widget.view.RobotoTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5"
                    android:text="9.8k"
                    android:textColor="@color/gray_b7baba"
                    android:textSize="@dimen/text_size_12"
                    app:typeface="roboto_bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/nav_header_height"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.toandoan.lol.widget.view.RobotoTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5"
                    android:text="156"
                    android:textColor="@color/gray_b7baba"
                    android:textSize="@dimen/text_size_12"
                    app:typeface="roboto_bold"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/text_size_5"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.toandoan.lol.widget.view.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16:29"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15"
                app:typeface="roboto_bold"/>

            <com.toandoan.lol.widget.view.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:text="11/11/11"
                android:textColor="@color/gray_b7baba"
                android:textSize="@dimen/text_size_12"
                app:typeface="roboto_bold"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>