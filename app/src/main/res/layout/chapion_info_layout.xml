<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_5"
    android:orientation="vertical"
    android:padding="@dimen/size_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.toandoan.lol.widget.view.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/size_80"
            android:text="@string/attack"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13"
            app:typeface="roboto_bold" />

        <com.toandoan.lol.widget.view.RobotoTextView
            android:id="@+id/tvAcctack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_10"
            android:minWidth="@dimen/size_20"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13"
            app:typeface="roboto_bold" />

        <com.toandoan.lol.widget.view.ProgressView
            android:id="@+id/pvAcctack"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_10"
            android:layout_weight="1"
            app:background_color="red"
            app:progress_value="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:gravity="center"
        android:orientation="horizontal">

        <com.toandoan.lol.widget.view.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/size_80"
            android:text="@string/defence"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13"
            app:typeface="roboto_bold" />

        <com.toandoan.lol.widget.view.RobotoTextView
            android:id="@+id/tvDefence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_10"
            android:minWidth="@dimen/size_20"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13"
            app:typeface="roboto_bold" />


        <com.toandoan.lol.widget.view.ProgressView
            android:id="@+id/pvDefence"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_10"
            android:layout_weight="1"
            app:background_color="green"
            app:progress_value="0" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:gravity="center"
        android:orientation="horizontal">

        <com.toandoan.lol.widget.view.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/size_80"
            android:text="@string/ability"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13"
            app:typeface="roboto_bold" />

        <com.toandoan.lol.widget.view.RobotoTextView
            android:id="@+id/tvAbility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_10"
            android:minWidth="@dimen/size_20"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13"
            app:typeface="roboto_bold" />


        <com.toandoan.lol.widget.view.ProgressView
            android:id="@+id/pvAbility"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_10"
            android:layout_weight="1"
            app:background_color="blue"
            app:progress_value="0" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:gravity="center"
        android:orientation="horizontal">

        <com.toandoan.lol.widget.view.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/size_80"
            android:text="@string/dificulty"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13"
            app:typeface="roboto_bold" />

        <com.toandoan.lol.widget.view.RobotoTextView
            android:id="@+id/tvDificulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_10"
            android:minWidth="@dimen/size_20"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13"
            app:typeface="roboto_bold" />


        <com.toandoan.lol.widget.view.ProgressView
            android:id="@+id/pvDificulty"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_10"
            android:layout_weight="1"
            app:background_color="violet"
            app:progress_value="0" />

    </LinearLayout>


</LinearLayout>
