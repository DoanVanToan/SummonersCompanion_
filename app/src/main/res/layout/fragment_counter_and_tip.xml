<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_0E1617"
    android:orientation="vertical"
    tools:context="com.toandoan.lol.fragment.CounterAndTipFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/size_5">

        <com.toandoan.lol.widget.view.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_5"
            android:text="@string/tips"
            android:textColor="@color/yellow_D4BC6C"
            android:textSize="@dimen/text_size_18"
            app:typeface="arista_light" />

        <com.toandoan.lol.widget.view.RobotoTextView
            android:id="@+id/tvTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1.3dp"
            android:paddingLeft="@dimen/size_10"
            android:paddingTop="@dimen/size_5"
            android:text="aadsdasdas \ndasdasd"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14"
            app:typeface="roboto_regular" />

        <com.toandoan.lol.widget.view.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:paddingLeft="@dimen/size_5"
            android:text="@string/counter_tips"
            android:textColor="@color/yellow_D4BC6C"
            android:textSize="@dimen/text_size_18"
            app:typeface="arista_light" />

        <com.toandoan.lol.widget.view.RobotoTextView
            android:id="@+id/tvCounterTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1.3dp"
            android:paddingLeft="@dimen/size_10"
            android:paddingTop="@dimen/size_5"
            android:text="@string/tips"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14"
            app:typeface="roboto_regular" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
