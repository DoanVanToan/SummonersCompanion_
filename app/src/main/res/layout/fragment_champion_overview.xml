<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_0E1617"
    tools:context="com.toandoan.lol.fragment.ChampionOverviewFragment">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/chapion_info_layout" />

            <include layout="@layout/champion_stats_layout" />

            <com.toandoan.lol.widget.view.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_4"
                android:background="@color/black_171717" />

            <com.toandoan.lol.widget.view.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_5"
                android:text="@string/lore"
                android:textColor="@color/yellow_D4BC6C"
                android:textSize="@dimen/text_size_16"
                app:typeface="arista_light" />

            <com.toandoan.lol.widget.view.RobotoTextView
                android:id="@+id/tvLore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/size_60"
                android:padding="@dimen/size_5"
                android:paddingLeft="@dimen/size_5"
                android:paddingRight="@dimen/size_5"
                android:text="@string/attack"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13"
                app:typeface="roboto_bold" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
